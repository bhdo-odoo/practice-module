<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="motorcycle_compare_template" name="Motorcycle Compare">
        <t t-call="website.layout">
            <div class="container">
                <h1>Motorcycle Comparison</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Model</th>
                            <th>Horsepower</th>
                            <th>Top Speed</th>
                            <th>Torque</th>
                            <th>Battery Capacity</th>
                            <th>Charge Time</th>
                            <th>Range</th>
                            <th>Curb Weight</th>
                            <th>Image</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="motorcycles" t-as="motorcycle">
                            <tr>
                                <td><t t-esc="motorcycle.name"/></td>
                                <td><t t-esc="motorcycle.horsepower"/></td>
                                <td><t t-esc="motorcycle.top_speed"/></td>
                                <td><t t-esc="motorcycle.torque"/></td>
                                <td><t t-esc="motorcycle.battery_capacity"/></td>
                                <td><t t-esc="motorcycle.charge_time"/></td>
                                <td><t t-esc="motorcycle.range"/></td>
                                <td><t t-esc="motorcycle.curb_weight"/></td>
                                <td><img t-att-src="'/web/image/product.template/' ~ motorcycle.id ~ '/image'"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>
