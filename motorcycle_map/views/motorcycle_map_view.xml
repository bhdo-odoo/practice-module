<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_partner_view_motorcycle_map" model="ir.ui.view">
        <field name="name">res.partner.view.map</field>
        <field name="model">res.partner</field>
        <field name="arch" type="xml">
            <map res_partner="owner_id">
                <field name="registry_number" string="Registry Number"/>
                <field name="current_mileage" string="Current Mileage"/>
                <field name="date_registry" string="Date Registry"/>
                <field name="license_plate" string="License Plate"/>
                <field name="vin" string="VIN"/>
            </map>
        </field>
    </record>
    <record id="res_partner_action_view_motorcycle_map" model="ir.actions.act_window.view">
        <field name="sequence" eval="3"/>
        <field name="view_mode">map</field>
        <field name="view_id" ref="res_partner_view_map"/>
        <field name="act_window_id" ref="contacts.action_contacts"/>
    </record>
</odoo>